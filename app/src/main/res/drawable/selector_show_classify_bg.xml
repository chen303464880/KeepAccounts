<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:innerRadius="11.5dp" android:shape="ring" android:thickness="1dp" android:useLevel="false">
            <solid android:color="@color/divider_color_e7" />
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>

                <shape android:shape="oval" android:useLevel="false">
                    <solid android:color="@color/AppThemeColor" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <item android:gravity="center" android:drawable="@mipmap/photo_picker_default_check" />
        </layer-list>
    </item>
</selector>