<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/divider_color_dedddd" />
            <size
                android:width="50dp"
                android:height="50dp" />
            <stroke
                android:width="5dp"
                android:color="@color/bg_color_ebeceb" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size
                android:width="38dp"
                android:height="38dp" />
        </shape>
    </item>
    <item
        android:gravity="center"
        android:drawable="@mipmap/down_arrows" />
</layer-list>