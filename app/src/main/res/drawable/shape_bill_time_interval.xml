<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1px"
        android:left="-1px"
        android:right="-1px">
        <shape android:shape="rectangle">
            <stroke
                android:width="1px"
                android:color="@color/divider_color_e7" />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:top="1px"
        android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_color_f7" />
        </shape>
    </item>

    <item
        android:left="-1px"
        android:right="-1px"
        android:top="-1px">
        <shape android:shape="rectangle">
            <stroke
                android:width="1px"
                android:color="@color/divider_color_e7" />
        </shape>
    </item>
</layer-list>