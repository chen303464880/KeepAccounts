<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/start"
    android:paddingEnd="@dimen/end">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/youjiantou_baobiao" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pb_budget"
        android:layout_marginStart="@dimen/start"
        android:layout_toEndOf="@+id/iv_logo"
        android:minLines="1"
        android:textColor="@color/text_color_655f5f"
        android:textSize="@dimen/text_size16"
        tools:ignore="RelativeOverlap" />

    <ProgressBar
        android:id="@+id/pb_budget"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/start"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/iv_more"
        android:layout_toEndOf="@+id/iv_logo"
        android:max="100"
        android:progressDrawable="@drawable/shape_progress_bar_budget_drawable" />

    <TextView
        android:id="@+id/tv_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb_budget"
        android:layout_marginStart="@dimen/start"
        android:layout_toEndOf="@+id/iv_logo"
        android:textColor="@color/text_color_707070"
        android:textSize="@dimen/text_size12" />

    <TextView
        android:id="@+id/tv_surplus_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pb_budget"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/tv_surplus"
        android:textColor="@color/text_color_a19e9d"
        android:textSize="@dimen/text_size12" />

    <TextView
        android:id="@+id/tv_surplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pb_budget"
        android:layout_alignEnd="@+id/pb_budget"
        android:textColor="@color/text_color_655f5f"
        android:textSize="@dimen/text_size12" />


</RelativeLayout>