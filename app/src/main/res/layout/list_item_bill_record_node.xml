<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bill_record_item_height"
    android:gravity="center_vertical">


    <TextView
        android:id="@+id/tv_income"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:paddingEnd="@dimen/end"
        android:paddingStart="@dimen/start"
        android:textColor="@color/text_color_655f5f"
        android:textSize="@dimen/text_size14"
        tools:ignore="RelativeOverlap" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_day"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/shape_bill_record_day_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size10" />

    <TextView
        android:id="@+id/tv_expend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:paddingEnd="@dimen/end"
        android:paddingStart="@dimen/start"
        android:textColor="@color/text_color_655f5f"
        android:textSize="@dimen/text_size14" />


</LinearLayout>

