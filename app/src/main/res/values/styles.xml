    <style name="calendar_week_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text_color_655f5f</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size12</item>
    </style>

    <style name="select_calendar_week_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text_color_c8c5c5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size13</item>
    </style>

</resources>
