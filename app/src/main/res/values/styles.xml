    <style name="statement_rb_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_rb_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="add_account_item_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/add_account_item_height</item>
        <item name="android:paddingEnd">@dimen/end</item>
        <item name="android:paddingStart">@dimen/start</item>
        <item name="android:background">@drawable/ripple_bg_click_white</item>

    </style>


    <style name="add_account_item_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_655f5f</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size15</item>
    </style>

    <style name="add_account_item_value_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:textColor">@color/text_color_a19e9d</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:drawableEnd">@mipmap/youjiantou_baobiao</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="key_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/text_color_a19e9d</item>
        <item name="android:textSize">@dimen/text_size14</item>
    </style>

    <style name="bill_details_fl_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/end</item>
        <item name="android:paddingStart">@dimen/start</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="value_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/text_color_655f5f</item>
        <item name="android:textSize">@dimen/text_size14</item>
    </style>

    <style name="activity_bottom_add">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_bottom_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/AppThemeColor</item>
        <item name="android:textSize">@dimen/text_size18</item>
        <item name="android:background">@drawable/shape_bg_top_line</item>
    </style>


    <style name="radio_button_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/radio_button_width</item>
        <item name="android:layout_height">@dimen/radio_button_height</item>
        <item name="android:text">@string/property</item>
        <item name="android:textColor">@color/selector_property_rb_text_color</item>
        <item name="android:textSize">@dimen/text_size14</item>
    </style>

